{
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "noEmit": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "sourceMap": true,
    "types": ["vite/client"],
    "plugins": [{ "name": "typescript-plugin-css-modules" }]
  },
  "include": ["./src", "auto-imports.d.ts"],
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
